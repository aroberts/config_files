" Window size
set winwidth=80
let g:halfsize = 106
let g:fullsize = 161
set lines=57
let &columns = g:halfsize

" Font
set guifont=Monaco\ for\ Powerline:h16.00
" set guifont=Source\ Code\ Pro\ for\ Powerline:h16
set anti

" No audible bell
set vb

" No toolbar
set guioptions-=T

" Use console dialogs
set guioptions+=c
